{
  "name": "opinion_bucket",
  "version": "1.0.0",
  "description": "A RESTful API and App code for Opinion Bucket",
  "main": "server.js",
  "scripts": {
    "postinstall": "typings install",
    "typings" : "typings",
    "lint": "tslint ./src/app/**/*.ts  -t verbose",
    "test": "./teardown.sh && NODE_ENV=test node ./config/init.js && NODE_ENV=test mocha tests/server",
    "start": "node ./config/init.js && tsc && concurrently \"nodemon server.js\" \"tsc -w\" \"lite-server\"",
    "coveralls": "cat ./coverage/lcov.info | coveralls",
    "coverage": "rm -rf /coverage && node ./config/init.js && istanbul cover node_modules/.bin/_mocha tests/server"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/bolorundurowb/Document-Management-System.git"
  },
  "keywords": [
    "Opinion",
    "Bucket"
  ],
  "author": "Bolorunduro Winner-Timothy",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/bolorundurowb/opinion-bucket/issues"
  },
  "homepage": "https://github.com/bolorundurowb/opinion-bucket#readme",
  "devDependencies": {
    "chai": "^3.5.0",
    "coveralls": "^2.11.14",
    "del": "^2.2.2",
    "istanbul": "^0.4.5",
    "mocha": "^3.2.0",
    "should": "^11.1.2",
    "supertest": "3.0.0",
    "concurrently": "^2.2.0",
    "lite-server": "^2.2.0",
    "tslint": "^3.7.4",
    "typescript": "^2.0.2",
    "typings": "^1.0.4"
  },
  "dependencies": {
    "@angular/common": "2.0.0",
    "@angular/compiler": "2.0.0",
    "@angular/core": "2.0.0",
    "@angular/forms": "2.0.0",
    "@angular/http": "2.0.0",
    "@angular/platform-browser": "2.0.0",
    "@angular/platform-browser-dynamic": "2.0.0",
    "@angular/router": "3.0.0",
    "bcryptjs": "^2.4.0",
    "body-parser": "^1.15.2",
    "core-js": "^2.4.1",
    "dotenv": "4.0.0",
    "express": "^4.14.0",
    "jsonwebtoken": "^7.2.1",
    "mongoose": "^4.7.6",
    "morgan": "^1.7.0",
    "reflect-metadata": "^0.1.3",
    "rxjs": "5.0.0-beta.12",
    "semantic-ui": "^2.2.7",
    "systemjs": "0.19.27",
    "zone.js": "^0.6.23"
  }
