{
  "parserOptions": {
    "ecmaVersion": 6
  },
  "extends": "eslint:recommended",
  "env": {
    "browser": true,
    "node": true,
    "es6": true,
    "mocha": true
  },
  "rules": {
    "indent": [
      2,
      2
    ],
    "semi": 2,
    "eqeqeq": 2,
    "curly": 2,
    "quotes": [
      2,
      "single"
    ]
  }
}
